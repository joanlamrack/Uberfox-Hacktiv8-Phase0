<%- include("head"); %>

<h1>Library</h1>

<%- include("navbar"); %>
<div class="form">
	<h3>Add a Book </h3>
	<%if(err){%>
		<div class="alert alert-danger" role="alert">
			<%=err%>
		</div>
	<%}%>
	<form action="" method=POST>
			<div class="form-group">
					<label for="oi">
							Book Name
					</label>
					<select name="bookId" class="form-control">
						<%for(let book of BookList){  %>
							<option value="<%=book.id%>"> <%=book.title%> </option>
						<% } %>
					</select>
			</div>
			<div class="form-group">
				<label for="description">
					Borrower's Name
				</label>
				<input id="" class="form-control" type="text" name="borrowerName" value="">
			</div>
			<div class="form-group">
				<label for="author">
					Borrower Gender
				</label>
				<select name="borrowerGender" class="form-control">
					<option value="Female"> Female </option>
					<option value="Male"> Male </option>
				</select>
			</div>
			<div class="form-group">
					<label for="description">
						Due Date
					</label>
					<input id="" class="form-control" type="date" name="dueDate" value="">
			</div>
		<button type="submit" class="btn-full btn btn-primary">Submit</button>
	</form>
</div>

<div class="table-responsive">
		<table class="table table-hover">
			<tr>
				<th>No.</th>
				<th>Borrower's Name.</th>
				<th>Book Title</th>
				<th>Due Date</th>
				<th>Transaction Date</th>
				<th>Returned</th>
				<th>Actions</th>
			</tr>
			<% LoanList.forEach(b=>{ %>
			<tr>

				
					<tr>
					<td><%=b.id%></td>
					<td><%=b.borrowerName%></td>
					<td><%=b.Books[0].title%></td>
					<td><%=b.dueDate%></td>
					<td><%=b.createdAt%></td>
					<td><%=b.returned%></td>

				
				<td>
					<a href="/books/<%=b.id%>/edit">
						<button type="button" class="btn btn-default good">Return</button>
					</a>
				</td>
			</tr>
			<% }) %>

		</table>
</div>

<%- include("bottom"); %>
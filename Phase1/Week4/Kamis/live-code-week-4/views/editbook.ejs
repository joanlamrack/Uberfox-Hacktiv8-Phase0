<%- include("head"); %>

<h1>Library</h1>

<%- include("navbar"); %>
<div class="form">
	<h3>Add a Book </h3>
	<%if(err){%>
		<div class="alert alert-danger" role="alert">
			<%=err%>
		</div>
	<%}%>
	<form action="../<%=bookData.id%>/update" method=POST>
			<div class="form-group">
				<label for="title">
					Title
				</label>
				<input id="" class="form-control" type="text" name="title" value="<%=bookData.title%>">
			</div>
			<div class="form-group">
				<label for="description">
					Description
				</label>
				<input id="" class="form-control" type="text" name="description" value="<%=bookData.desciption%>">
			</div>
			<div class="form-group">
				<label for="author">
					Author
				</label>
				<input id="" class="form-control" type="text" name="author" value="<%=bookData.author%>">
			</div>
		<button type="submit" class="btn-full btn btn-primary">Submit</button>
	</form>
</div>

<%- include("bottom"); %>